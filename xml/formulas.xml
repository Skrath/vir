<?xml version="1.0"?>
<formulas>

  <formula name="ability_group">
    <set name="base_level" cast="integer">


      <add>
        <multiply>
          <data type="character.PrimaryStat">
            <objRef name="primary"/>
          </data>
          <data>2</data>
        </multiply>
        <data type="character.PrimaryStat">
          <objRef name="secondary"/>
        </data>

        <subtract>
          <multiply>
            <data type="character.PrimaryStat">
              <objRef name="negative"/>
            </data>
            <data>2</data>
          </multiply>

          <data>5</data>
        </subtract>


      </add>

    </set>
  </formula>

  <formula name="health">
    <set name="value" cast="float">
      <add>
        <multiply>
          <add>
            <multiply>
              <data type="character.PrimaryStat">Endurance</data>
              <data>3</data>
            </multiply>

            <multiply>
              <data type="character.PrimaryStat">Strength</data>
              <data>2</data>
            </multiply>
          </add>
          <data>10.5</data>
        </multiply>

        <multiply>

          <multiply>
            <add>
              <data type="character.PrimaryStat">Endurance</data>
              <data type="character.PrimaryStat">Strength</data>
            </add>

            <add>
              <data type="character.CharacterStat">Level</data>
              <subtract>
                <data>1</data>
              </subtract>
            </add>
          </multiply>

          <data>10</data>
        </multiply>

      </add>
    </set>
  </formula>
</formulas>
