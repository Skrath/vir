<?xml version="1.0"?>
<formulas>

  <formula name="ability_group">
    <set name="base_level" cast="integer">


      <add>
        <multiply>
          <data type="character.PrimaryStats">
            <data type="object">primary</data>
          </data>
          <data>2</data>
        </multiply>
        <data type="character.PrimaryStats">
          <data type="object">secondary</data>
        </data>

        <subtract>
          <multiply>
            <data type="character.PrimaryStats">
              <data type="object">negative</data>
            </data>
            <data>2</data>
          </multiply>

          <data>5</data>
        </subtract>


      </add>

    </set>
  </formula>

</formulas>
